<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_orderHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_orderHistory_showMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_show_more" />

        <TextView
            android:id="@+id/textView_orderHistoryItem_rp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="Rp."
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@id/textView_orderHistoryItem_totalPrice"
            app:layout_constraintEnd_toStartOf="@id/textView_orderHistoryItem_totalPrice"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView_orderHistoryItem_totalPrice" />

        <TextView
            android:id="@+id/textView_orderHistoryItem_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50.000"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@id/textView_orderHistoryItem_totalItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textView_orderHistoryItem_rp"
            app:layout_constraintTop_toBottomOf="@id/imageView_orderHistory_showMore"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView_orderHistoryItem_totalItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="8dp"
            android:text="5"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@id/textView_orderHistoryItem_issued"
            app:layout_constraintEnd_toStartOf="@id/textView_orderHistoryItem_item"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/textView_orderHistoryItem_rp"
            app:layout_constraintTop_toBottomOf="@id/textView_orderHistoryItem_totalPrice" />

        <TextView
            android:id="@+id/textView_orderHistoryItem_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/barang"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@id/textView_orderHistoryItem_totalItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textView_orderHistoryItem_totalItem"
            app:layout_constraintTop_toTopOf="@id/textView_orderHistoryItem_totalItem" />

        <TextView
            android:id="@+id/textView_orderHistoryItem_issued"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2018-04-02 18:42:40"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@id/textView_orderHistoryItem_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/textView_orderHistoryItem_rp"
            app:layout_constraintTop_toBottomOf="@id/textView_orderHistoryItem_totalItem" />

        <TextView
            android:id="@+id/textView_orderHistoryItem_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="3dp"
            android:text="@string/selesai"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>