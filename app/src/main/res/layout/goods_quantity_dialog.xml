<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView_goodsQuantity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/jumlah"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_goodsQuantity_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView_goodsQuantity_minus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/imageView_goodsQuantity_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_goodsQuantity_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/textView_goodsQuantity_quantity"
        app:layout_constraintTop_toTopOf="@+id/imageView_goodsQuantity_minus"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_add" />

    <ImageView
        android:id="@+id/imageView_goodsQuantity_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_goodsQuantity_buy"
        app:layout_constraintEnd_toStartOf="@+id/textView_goodsQuantity_quantity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_goodsQuantity_name"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_minus" />

    <TextView
        android:id="@+id/textView_goodsQuantity_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_goodsQuantity_minus"
        app:layout_constraintEnd_toStartOf="@+id/imageView_goodsQuantity_plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/imageView_goodsQuantity_minus"
        app:layout_constraintTop_toTopOf="@+id/imageView_goodsQuantity_minus" />

    <Button
        android:id="@+id/button_goodsQuantity_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorButton"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:text="@string/tambah_ke_keranjang"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_goodsQuantity_minus"
        app:layout_constraintVertical_chainStyle="packed" />

</android.support.constraint.ConstraintLayout>