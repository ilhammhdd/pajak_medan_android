<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/textView_completingProfile_forName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edtTxt_nama"
        app:layout_constraintBottom_toBottomOf="@id/editText_completingProfile_fullName"
        app:layout_constraintEnd_toStartOf="@id/editText_completingProfile_fullName"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/textView_completingProfile_forPhone"
        app:layout_constraintTop_toTopOf="@id/editText_completingProfile_fullName" />

    <EditText
        android:id="@+id/editText_completingProfile_fullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/editText_completingProfile_phoneNumber"
        app:layout_constraintEnd_toEndOf="@id/editText_completingProfile_phoneNumber"
        app:layout_constraintStart_toStartOf="@id/editText_completingProfile_phoneNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_completingProfile_forPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/edtTxt_noHp"
        app:layout_constraintBottom_toBottomOf="@id/editText_completingProfile_phoneNumber"
        app:layout_constraintEnd_toStartOf="@+id/editText_completingProfile_phoneNumber"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/editText_completingProfile_phoneNumber" />

    <EditText
        android:id="@+id/editText_completingProfile_phoneNumber"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:inputType="phone"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/button_completingProfile_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/textView_completingProfile_forPhone"
        app:layout_constraintTop_toBottomOf="@id/editText_completingProfile_fullName" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".4" />

    <Button
        android:id="@+id/button_completingProfile_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:text="@string/selesai"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editText_completingProfile_phoneNumber"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_completingProfile_phoneNumber" />
</android.support.constraint.ConstraintLayout>